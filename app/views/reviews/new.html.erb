<h1>Laissez nous un avis positif :D</h1>
<div class="review">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <div class="my-3">
      <% Review::AUTHORIZED_RATINGS.each do |index| %>
        <i id="<%= index %>" class="review-rating far fa-star"></i>
      <% end %>
    </div>
    <%= f.submit "Soumettre mon avis positif", class: "btn btn-primary" %>
  <% end %>
</div>
